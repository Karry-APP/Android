<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/guideline5"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">

        <TextView
                android:text="@string/registrationActivity_welcomeMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                android:textSize="24sp" android:textColor="#000000"/>
        <TextView
                android:text="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                android:textSize="36sp" android:textColor="#000000"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline" app:layout_constraintGuide_begin="20dp"
                                          android:orientation="horizontal" app:layout_constraintGuide_percent="0.20"/>
    <android.support.constraint.ConstraintLayout
            app:layout_constraintTop_toTopOf="@+id/guideline" android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent">

        <EditText
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/inputFirstName" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:hint="@string/registrationActivity_firstname"
                style="@style/inputGrey" app:layout_constraintBottom_toTopOf="@+id/inputLastName"
                app:layout_constraintVertical_chainStyle="spread_inside" android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/inputLastName" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/inputFirstName" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                android:hint="@string/registrationActivity_lastname" style="@style/inputGrey"
                app:layout_constraintBottom_toTopOf="@+id/inputPassword" android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/inputPassword" app:layout_constraintTop_toBottomOf="@+id/inputLastName"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent" android:hint="@string/registrationActivity_password"
                style="@style/inputGrey" android:layout_marginTop="8dp"
                app:layout_constraintBottom_toTopOf="@+id/inputConfirmationPassword" android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/inputConfirmationPassword" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/inputPassword" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                android:hint="@string/registrationActivity_passwordConfirmation" style="@style/inputGrey"
                app:layout_constraintBottom_toTopOf="@+id/inputEmail" android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/inputEmail" app:layout_constraintTop_toBottomOf="@+id/inputConfirmationPassword"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent" android:hint="@string/registrationActivity_email"
                style="@style/inputGrey" android:layout_marginTop="8dp"
                app:layout_constraintBottom_toTopOf="@+id/inputPhone" android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/inputPhone" app:layout_constraintTop_toBottomOf="@+id/inputEmail"
                android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                android:hint="@string/registrationActivity_phone" style="@style/inputGrey"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"/>
        <Button
                android:text="@string/registrationActivity_submitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/inputPhone" style="@style/buttonGreenFull"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent" android:background="@drawable/roundedbutton"/>

        <Button
                android:text="G"
                android:id="@+id/buttonGoogleLogin"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/linkForgotPassword"
                style="@style/buttonSmallTransparent" android:background="@drawable/smallroundedbutton"
                app:layout_constraintStart_toEndOf="@+id/buttonFbLogin" android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="@string/registrationActivity_linkSocial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/linkForgotPassword"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button" android:textSize="12sp"
                android:textColor="#C4C4C4" android:layout_marginTop="32dp"/>
        <Button
                android:text="F"
                style="@style/buttonSmallTransparent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/linkForgotPassword" android:id="@+id/buttonFbLogin"
                android:background="@drawable/smallroundedbutton"
                app:layout_constraintEnd_toStartOf="@+id/buttonGoogleLogin"
                app:layout_constraintHorizontal_chainStyle="packed" android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline5" app:layout_constraintGuide_begin="24dp"
                                          android:orientation="horizontal"/>
</android.support.constraint.ConstraintLayout>