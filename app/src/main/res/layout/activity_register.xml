<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".activities.RegisterActivity"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
            android:layout_width="210dp"
            android:layout_height="100dp"
            android:id="@+id/registerLogo" android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/RegisterActivity_registerLogo_contentDescription"
            app:srcCompat="@drawable/ic_logo_karry_full"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="50dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/registerLogo" android:id="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/registerFirstname" android:layout_weight="1" android:layout_marginEnd="5dp"
                android:hint="@string/RegisterActivity_registerFirstname_hint" android:importantForAutofill="no"
                tools:targetApi="o"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/registerLastname" android:layout_weight="1" android:layout_marginStart="5dp"
                android:hint="@string/RegisterActivity_registerLastname_hint" android:importantForAutofill="no"
                tools:targetApi="o"/>
    </LinearLayout>
    <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:ems="10"
            android:id="@+id/registerEmail"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:hint="@string/RegisterActivity_registerEmail_hint"
            android:importantForAutofill="no" tools:targetApi="o" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:inputType="textEmailAddress"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:ems="10"
            android:id="@+id/registerPassword"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:inputType="textPassword" android:hint="@string/RegisterActivity_registerPassword_hint"
            android:importantForAutofill="no" tools:targetApi="o" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/registerEmail"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:ems="10"
            android:id="@+id/registerConfirmPassword"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:inputType="textPassword" android:hint="@string/RegisterActivity_registerConfirmPassword_hint"
            android:importantForAutofill="no" tools:targetApi="o" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/registerPassword"/>
    <Button
            android:text="@string/RegisterActivity_buttonRegister_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/registerButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:background="@drawable/btn_rounded_normal" android:textColor="@android:color/white"
            app:layout_constraintHorizontal_bias="0.497" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/registerConfirmPassword"/>
    <TextView
            android:text="@string/RegisterActivity_haveAccount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/registerHaveAccount"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/registerButton"
    />
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registerProgress"
            app:layout_constraintEnd_toEndOf="@+id/registerButton"
            app:layout_constraintBottom_toBottomOf="@+id/registerButton"
            app:layout_constraintTop_toTopOf="@+id/registerButton"
            app:layout_constraintStart_toStartOf="@+id/registerButton" android:visibility="invisible"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/registerError"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/registerHaveAccount" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>