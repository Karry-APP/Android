<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8FAFE"
        tools:context=".fragments.main.CityPickerFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackgroundMain">
        <LinearLayout
                android:elevation="12dp"
                android:background="@drawable/search_background_city_picker"
                android:paddingBottom="12dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/linearLayout14"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                    android:paddingStart="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    tools:layout_editor_absoluteX="8dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/linearLayout13"
                    android:gravity="center_vertical">
                <ImageButton
                        android:layout_marginRight="15dp"
                        android:src="@drawable/ic_arrow_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/closeCityPicker"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@android:color/transparent"
                        android:layout_marginLeft="5dp"/>
                <TextView
                        android:text="Je souhaite etre livré à : "
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/colorDarkBLue"

                        android:layout_height="wrap_content"
                        android:id="@+id/textView4"
                        android:textAlignment="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/closeCityPicker"
                        android:textSize="22dp"/>
            </LinearLayout>
            <EditText
                    android:drawableLeft="@drawable/ic_search"
                    android:layout_width="match_parent"
                    android:padding="11dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName|textCapSentences"
                    android:ems="10"
                    android:background="@drawable/bg_searchbar_opened"
                    android:id="@+id/searchbarCity"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:hint="Ville de départ du voyageur"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout13"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:id="@+id/arrivalCitiesList"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout14" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>