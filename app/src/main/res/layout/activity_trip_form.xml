<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhiteBackground"
        tools:context=".activities.TripFormActivity">

    <TextView
            android:text="@string/TripFormActivity_TripPageTitle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tripPageTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="72dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.501" android:textSize="24sp" android:textStyle="bold"/>
    <TextView
            android:text="@string/TripFormActivity_tripSubtitleMain_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tripSubtitleMain"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tripPageTitle"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/tripFormDescription"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="@string/TripFormActivity_tripFormDescription_hint"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tripSubtitleMain" android:importantForAutofill="no"
            tools:targetApi="o" android:background="@drawable/bg_input" android:paddingLeft="5dp"
            android:paddingRight="5dp"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/tripFormDepartureCity"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tripFormDescription" android:background="@drawable/bg_input"
            android:spinnerMode="dialog" android:paddingLeft="5dp" android:paddingRight="5dp"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/tripFormDestinationCity"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:background="@drawable/bg_input" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tripFormDepartureCity" android:spinnerMode="dialog"
            android:paddingLeft="5dp" android:paddingRight="5dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/linearLayout" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tripFormDestinationCity">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:ems="10"
                android:id="@+id/tripFormCarryWeight" android:layout_weight="1" android:hint="Weight"
                android:importantForAutofill="no" android:inputType="number" tools:targetApi="o"
                android:background="@drawable/bg_input" android:layout_margin="5dp" android:paddingLeft="5dp"
                android:paddingRight="5dp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:ems="10"
                android:id="@+id/tripFormCarryMaxAmount" android:layout_weight="1" android:hint="Quantity"
                android:importantForAutofill="no" tools:targetApi="o" android:background="@drawable/bg_input"
                android:layout_margin="5dp" android:paddingLeft="5dp" android:inputType="number"
                android:paddingRight="5dp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:ems="10"
                android:id="@+id/tripFormCarryTaxe" android:layout_weight="1" android:hint="Taxe"
                android:importantForAutofill="no" tools:targetApi="o" android:background="@drawable/bg_input"
                android:layout_margin="5dp" android:paddingLeft="5dp" android:inputType="number"
                android:paddingRight="5dp"/>
    </LinearLayout>
    <Button
            android:text="@string/TripFormActivity_tripFormButton_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:id="@+id/tripFormButton" android:background="@drawable/btn_rounded_normal"
            android:textColor="@android:color/white"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tripFormProgress"
            app:layout_constraintBottom_toBottomOf="@+id/tripFormButton"
            app:layout_constraintTop_toTopOf="@+id/tripFormButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:visibility="invisible"/>
</androidx.constraintlayout.widget.ConstraintLayout>