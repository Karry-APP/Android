<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/linearLayout18">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout16">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageButton
                    android:src="@drawable/ic_arrow_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/back_arrow"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="32dp" android:layout_marginStart="24dp"/>
            <TextView
                    android:text="@string/orderFormActivity_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/orderFormActivity_title"
                    android:textStyle="bold"

                    android:textSize="20sp"
                    android:textColor="#004E64"

                    android:paddingStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="8dp"
            />
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="22dp"
                android:background="@color/colorWhiteBackground"
                android:paddingLeft="16dp" android:paddingRight="16dp"
                android:paddingTop="8dp" android:paddingBottom="8dp">
            <TextView
                    android:text="@string/orderFormActivity_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/label_name" android:layout_weight="1"
                    android:textAppearance="@style/labelBlack"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/input_name" android:layout_weight="1"
                    style="@style/inputGreyAntracite" android:hint="@string/orderFormActivity_hint_name"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/colorWhiteBackground"
                android:paddingLeft="16dp" android:paddingRight="16dp"
                android:paddingTop="8dp" android:paddingBottom="8dp">
            <TextView
                    android:text="@string/orderFormActivity_reward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/label_reward" android:layout_weight="1"
                    android:textAppearance="@style/labelBlack"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/input_reward" android:layout_weight="1"
                    style="@style/inputGreyAntracite" android:hint="@string/orderFormActivity_hint_reward"/>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/colorWhiteBackground"
                android:paddingLeft="16dp" android:paddingRight="16dp" android:paddingTop="16dp"
                android:paddingBottom="16dp" android:id="@+id/link_price_estimate_fragment" android:gravity="center">

            <TextView
                    android:text="@string/orderFormActivity_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/label_price" android:layout_weight="1"
                    android:textAppearance="@style/labelBlack"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/valuePriceEstimate" android:layout_weight="1"
                    android:gravity="center" android:textColor="#121212"
                    app:layout_constraintEnd_toStartOf="@+id/icon_arrow_price"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="16dp"/>
            <ImageView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_arrow"
                    android:id="@+id/icon_arrow_price" android:layout_weight="1"
                    android:layout_gravity="right|center_horizontal|center_vertical" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/colorWhiteBackground"
                android:paddingLeft="16dp" android:paddingRight="16dp" android:paddingTop="16dp"
                android:paddingBottom="16dp" android:id="@+id/link_volume_estimate_fragment">

            <TextView
                    android:text="@string/orderFormActivity_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/label_volume" android:layout_weight="1"
                    android:textAppearance="@style/labelBlack"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/valueVolume" android:layout_weight="1"
                    android:gravity="center" android:textColor="#121212"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/icon_arrow_volume" android:layout_marginEnd="16dp"/>
            <ImageView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_arrow"
                    android:id="@+id/icon_arrow_volume" android:layout_weight="1" android:layout_gravity="center"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/colorWhiteBackground"
                android:paddingLeft="16dp" android:paddingRight="16dp" android:paddingTop="16dp"
                android:paddingBottom="16dp" android:id="@+id/link_weight_estimate_fragment">

            <TextView
                    android:text="@string/orderFormActivity_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/label_weight" android:layout_weight="1"
                    android:textAppearance="@style/labelBlack"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/valueWeight" android:layout_weight="1"
                    android:gravity="center" android:textColor="#121212"
                    app:layout_constraintEnd_toStartOf="@+id/icon_arrow_weight"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="16dp"/>
            <ImageView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_arrow"
                    android:id="@+id/icon_arrow_weight" android:layout_weight="1" android:layout_gravity="center"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/colorWhiteBackground"
                android:paddingLeft="16dp" android:paddingRight="16dp"
                android:paddingTop="8dp" android:paddingBottom="8dp">
            <TextView
                    android:text="@string/orderFormActivity_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/label_message" android:layout_weight="1"
                    android:textAppearance="@style/labelBlack"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/input_message" android:layout_weight="1"
                    style="@style/inputGreyAntracite" android:hint="@string/orderFormActivity_hint_message"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/orderFormError"
            android:textColor="#dc3545"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:text="@string/OrderFormFragment_errorSaveForm"
            app:layout_constraintTop_toBottomOf="@+id/buttonSendOrder" android:layout_marginTop="8dp"
            android:visibility="invisible"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressSendOrder" app:layout_constraintEnd_toEndOf="@+id/buttonSendOrder"
            app:layout_constraintStart_toStartOf="@+id/buttonSendOrder"
            app:layout_constraintTop_toTopOf="@+id/buttonSendOrder"
            app:layout_constraintBottom_toBottomOf="@+id/buttonSendOrder" android:visibility="invisible"/>
    <Button
            android:text="@string/announcementActivity_buttonSendMessage"
            android:id="@+id/buttonSendOrder"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/btn_rounded_normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintVertical_chainStyle="packed" android:shadowRadius="0"
            android:layout_width="0dp"
            style="?android:attr/borderlessButtonStyle" android:textColor="@android:color/white"
            android:layout_height="55dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout16"
            android:layout_marginStart="45dp" android:layout_marginEnd="45dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>