<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.UpdateProfileActivity" android:background="@color/colorWhiteBackground">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:text="@string/MainActivity_bottomNavigation_updateProfileTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_weight="1"
                        android:textSize="20sp"
                        android:textColor="#004E64" android:textStyle="bold"
                        android:paddingStart="16dp"
                        android:paddingEnd="32dp"
                        app:layout_constraintStart_toEndOf="@+id/closeProfileButton"
                        android:layout_marginStart="8dp" android:layout_marginTop="32dp"
                        app:layout_constraintTop_toTopOf="parent"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_arrow_back"
                        android:id="@+id/closeProfileButton"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp" android:layout_marginTop="34dp"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:id="@+id/linearLayout7"
                        android:background="@drawable/card_border"
                        android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
                        app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                            android:text="@string/RegisterActivity_registerFirstname_hint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView6"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
                            android:textColor="@color/colorDarkBLue" android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>
                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:text="Name"
                            android:ems="10"
                            android:id="@+id/userFirstname" android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="8dp" android:layout_marginBottom="16dp"
                            android:paddingBottom="4dp" android:background="@drawable/bg_input_profile"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayout8"
                        android:background="@drawable/card_border"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                            android:text="@string/RegisterActivity_registerLastname_hint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView62"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
                            android:textColor="@color/colorDarkBLue" android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>
                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:text="Name"
                            android:ems="10"
                            android:id="@+id/userLastname" android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="8dp" android:layout_marginBottom="16dp"
                            android:paddingBottom="4dp" android:background="@drawable/bg_input_profile"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayout9"
                        android:background="@drawable/card_border"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout8"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">
                    <TextView
                            android:text="@string/RegisterActivity_registerPhone_hint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView61"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
                            android:textColor="@color/colorDarkBLue" android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>
                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:text="Name"
                            android:ems="10"
                            android:id="@+id/userPhone" android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="8dp" android:layout_marginBottom="16dp"
                            android:paddingBottom="4dp" android:background="@drawable/bg_input_profile"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayout1"
                        android:background="@drawable/card_border"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout9"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                >
                    <TextView
                            android:text="@string/RegisterActivity_registerEmail_hint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView60"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
                            android:textColor="@color/colorDarkBLue" android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>
                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:text="Name"
                            android:ems="10"
                            android:id="@+id/userEmail" android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="8dp" android:layout_marginBottom="16dp"
                            android:paddingBottom="4dp" android:background="@drawable/bg_input_profile"/>
                </LinearLayout>
                <Button
                        android:text="Modifier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/updateProfileFormButton" android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        android:background="@drawable/btn_rounded_normal" android:textColor="@android:color/white"
                        app:layout_constraintHorizontal_bias="0.497" android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout1"/>
                <ProgressBar
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/progressBar"
                        app:layout_constraintStart_toStartOf="@+id/updateProfileFormButton"
                        app:layout_constraintEnd_toEndOf="@+id/updateProfileFormButton"
                        app:layout_constraintTop_toTopOf="@+id/updateProfileFormButton"
                        app:layout_constraintBottom_toBottomOf="@+id/updateProfileFormButton"
                        android:visibility="invisible"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>