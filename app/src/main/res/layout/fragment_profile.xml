<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".fragments.ProfileFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/profileFirstname"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/profileLastname"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/profileFirstname" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/profileEmail"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/profileLastname"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
        <Button
                android:text="@string/ProfileFragment_logoutButton_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/profileLogout"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="@+id/profileEmail" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profileProgress" app:layout_constraintEnd_toEndOf="@+id/profileLogout"
                app:layout_constraintStart_toStartOf="@+id/profileLogout"
                app:layout_constraintBottom_toBottomOf="@+id/profileLogout"
                app:layout_constraintTop_toTopOf="@+id/profileLogout" android:visibility="invisible"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>