<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AnnouncementActivity">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="@+id/guideline7" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_height="wrap_content"
            android:id="@+id/constraintLayout3" android:layout_marginTop="24dp">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher_round"
                android:id="@+id/imageProfil" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="@string/announcementActivity_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textUserName"
                app:layout_constraintTop_toBottomOf="@+id/imageProfil" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>
        <TextView
                android:text="@string/city_Roma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textCity"
                app:layout_constraintTop_toBottomOf="@+id/textUserName"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/textCountry"
                app:layout_constraintHorizontal_chainStyle="packed" android:layout_marginTop="16dp"/>
        <TextView
                android:text="@string/country_Italy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textCountry"
                app:layout_constraintStart_toEndOf="@+id/textCity"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/textCity"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@android:drawable/star_on"
                android:id="@+id/imageStar1" app:layout_constraintTop_toBottomOf="@+id/textCity"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/imageStar2"
                app:layout_constraintHorizontal_chainStyle="packed" android:layout_marginTop="16dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@android:drawable/star_on"
                android:id="@+id/imageStar2"
                app:layout_constraintStart_toEndOf="@+id/imageStar1"
                app:layout_constraintTop_toTopOf="@+id/imageStar1" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/imageStar3"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@android:drawable/star_on"
                android:id="@+id/imageStar3" app:layout_constraintStart_toEndOf="@+id/imageStar2"
                app:layout_constraintTop_toTopOf="@+id/imageStar2" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/imageStar4"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@android:drawable/star_on"
                android:id="@+id/imageStar4" app:layout_constraintStart_toEndOf="@+id/imageStar3"
                app:layout_constraintTop_toTopOf="@+id/imageStar3"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/imageStar5"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@android:drawable/star_off"
                android:id="@+id/imageStar5" app:layout_constraintStart_toEndOf="@+id/imageStar4"
                app:layout_constraintTop_toTopOf="@+id/imageStar4" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/textComments"/>
        <TextView
                android:text="@string/announcementActivity_reviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textComments"
                app:layout_constraintStart_toEndOf="@+id/imageStar5" android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/imageStar5"
                app:layout_constraintBottom_toBottomOf="@+id/imageStar5" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline7"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_begin="24dp"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
            app:layout_constraintStart_toStartOf="@+id/guideline8"
            app:layout_constraintEnd_toStartOf="@+id/guideline9" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0">

        <TextView
                android:text="@string/announcementActivity_descritpion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textDescription"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
        />
        <TextView
                android:text="En déplacement pour quelques temps, je suis disposé à vous ramener des produits locaux quelqu’ils soient..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textPDescription"
                app:layout_constraintTop_toBottomOf="@+id/textDescription" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"/>
        <TextView
                android:text="@string/announcementActivity_subtitleWeight"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/textSubtitleWeight"
                app:layout_constraintTop_toBottomOf="@+id/textPDescription" android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/guideline10"
                android:layout_marginEnd="4dp"/>
        <TextView
                android:text="5 kg"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/textPWeight"
                app:layout_constraintTop_toBottomOf="@+id/textSubtitleWeight" android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/guideline10"
                android:layout_marginEnd="4dp"/>
        <TextView
                android:text="@string/announcementActivity_subtitleTax"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/textSubtitleTax"
                app:layout_constraintTop_toBottomOf="@+id/textPDescription" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textSubtitleWeight"
                android:layout_marginTop="24dp" android:layout_marginStart="4dp"/>
        <TextView
                android:text=" 20 %"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/textPTax"
                app:layout_constraintTop_toBottomOf="@+id/textSubtitleTax" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textPWeight"
                android:layout_marginTop="8dp" android:layout_marginStart="4dp"/>
        <TextView
                android:text="@string/announcementActivity_subtitleNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/textSubtitleNumber"
                app:layout_constraintTop_toBottomOf="@+id/textPWeight"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/guideline10"
                android:layout_marginEnd="4dp" android:layout_marginTop="16dp"/>
        <TextView
                android:text="3 produits"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/textPWeight2"
                app:layout_constraintTop_toBottomOf="@+id/textSubtitleNumber" android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/guideline10"
                android:layout_marginEnd="4dp" app:layout_constraintHorizontal_bias="1.0"/>
        <TextView
                android:text="@string/announcementActivity_subtitleDisponibility"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/textSubtitleDisponibility"
                app:layout_constraintTop_toBottomOf="@+id/textPTax" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textSubtitleWeight"
                android:layout_marginStart="4dp" android:layout_marginTop="16dp"/>
        <TextView
                android:text="23/03/2019"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/textPTax2"
                app:layout_constraintTop_toBottomOf="@+id/textSubtitleDisponibility"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textPWeight"
                android:layout_marginTop="8dp" android:layout_marginStart="4dp"
                app:layout_constraintHorizontal_bias="0.0"/>
        <Button
                android:text="@string/announcementActivity_buttonSendMessage"
                android:id="@+id/buttonSendMessage"
                app:layout_constraintTop_toBottomOf="@+id/textPWeight2"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/buttonSmallTransparent"
                android:background="@drawable/smallroundedbutton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toTopOf="@+id/buttonSendProposition"
                app:layout_constraintVertical_chainStyle="packed" android:shadowRadius="none"
                android:layout_width="221dp"/>
        <Button
                android:text="@string/announcementActivity_buttonSendProposition"
                android:layout_width="221dp"
                android:id="@+id/buttonSendProposition"
                app:layout_constraintTop_toBottomOf="@+id/buttonSendMessage"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent" style="@style/buttonSmallGrey"
                android:background="@drawable/smallroundedgreybutton"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp"/>
        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline10"
                                              android:orientation="vertical" app:layout_constraintGuide_begin="154dp"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline8"
                                          android:orientation="vertical" app:layout_constraintGuide_percent="0.10"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline9"
                                          android:orientation="vertical" app:layout_constraintGuide_percent="0.9"/>
</android.support.constraint.ConstraintLayout>