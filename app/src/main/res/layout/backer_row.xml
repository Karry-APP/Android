<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:background="@drawable/card_border"
                                                   android:id="@+id/backerCard" android:layout_marginTop="8dp"
>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/backerAvatar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="24dp" android:layout_marginTop="24dp"
            app:layout_constraintStart_toEndOf="@+id/trashButton" android:layout_marginStart="16dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/backerName" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/backerAvatar"
            android:layout_marginStart="16dp" android:textColor="@android:color/black" android:textStyle="bold"
            android:textSize="16sp" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@+id/imageButton3"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/backerRate"
            app:layout_constraintTop_toBottomOf="@+id/backerName"
            app:layout_constraintStart_toEndOf="@+id/backerAvatar"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="24dp"
            app:layout_constraintEnd_toStartOf="@+id/imageButton3" android:layout_marginEnd="16dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_right_arrow"
            android:id="@+id/imageButton3"
            android:background="@android:color/transparent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_trash_icon"
            android:id="@+id/trashButton"
            android:background="@android:color/transparent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>