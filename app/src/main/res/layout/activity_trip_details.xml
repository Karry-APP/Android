<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhiteBackground"
        tools:context=".activities.TripDetails">
    <ImageButton
            android:src="@drawable/ic_arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/closeDetailTrip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:background="@android:color/transparent"
            android:layout_marginTop="32dp" android:layout_marginStart="24dp"/>
    <TextView
            android:text="@string/searchResultActivity_searchResultPlaceholderDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:textStyle="bold"

            android:textSize="24sp"
            android:textColor="#004E64"

            android:paddingStart="16dp"
            android:layout_marginTop="26dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/closeDetailTrip" android:layout_marginStart="8dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tripCard" android:background="@drawable/card_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13" android:layout_marginTop="32dp">

        <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp" tools:srcCompat="@tools:sample/avatars[0]"
                android:id="@+id/userAvatar"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/tripDepartureCityDetails"/>
        <TextView
                android:text="@string/searchResultActivity_defaultName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userName"
                app:layout_constraintStart_toEndOf="@+id/userAvatar"
                android:layout_marginStart="8dp" tools:text="Adrien F."
                android:textColor="@android:color/black" android:textStyle="bold" android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="parent" android:textSize="16sp"/>
        <TextView
                android:text="@string/searchResultActivity_defaultRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userRate"
                app:layout_constraintStart_toEndOf="@+id/userAvatar"
                android:layout_marginStart="8dp"
                tools:text="4.8"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/userName" android:layout_marginTop="4dp"/>
        <TextView
                android:text="@string/searchResultActivity_seeProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linkTripDetails"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp"
                tools:text="@string/searchResultActivity_seeProfile"
                android:textColor="@color/green_karry" android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="parent" android:textSize="16sp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tripDepartureCityDetails" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                tools:text="Nantes (FR)" android:textColor="@android:color/black"
                android:layout_marginBottom="10dp" app:layout_constraintBottom_toTopOf="@+id/imageView3"
                android:textSize="18sp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tripDestinationCity" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp"
                tools:text="Rome (ITA)"
                android:textColor="@android:color/black"
                app:layout_constraintBottom_toTopOf="@+id/imageView4" android:layout_marginBottom="10dp"
                android:textSize="18sp"/>
        <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp" app:srcCompat="@drawable/bg_searchbar"
                android:id="@+id/imageView3"

                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toTopOf="@+id/searchStartDate" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp" android:contentDescription="UIDotStart"/>
        <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp" app:srcCompat="@drawable/bg_searchbar"
                android:id="@+id/imageView4"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp"
                app:layout_constraintBottom_toTopOf="@+id/searchEndDate" android:layout_marginBottom="10dp"
                android:contentDescription="UIDotEnd"/>
        <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toStartOf="@+id/imageView4"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/imageView3"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toTopOf="@+id/searchEndDate"
                android:backgroundTint="#949494" android:layout_marginBottom="16dp"/>
        <TextView
                android:text="@string/searchResultActivity_emptyDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/searchStartDate"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"
        />
        <TextView
                android:text="@string/searchResultActivity_defaultDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/searchEndDate"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp" tools:text="24/01/19"
                android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"
        />
        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp" app:srcCompat="@drawable/ic_star_full"
                android:id="@+id/imageView2"
                app:layout_constraintStart_toEndOf="@+id/userRate"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/userName" android:layout_marginTop="4dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/tripCardDescription" android:background="@drawable/card_border"
            app:layout_constraintStart_toStartOf="@id/tripCard"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tripCard" app:layout_constraintHorizontal_bias="0.0">

        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/descriptionValue"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/descriptionTitle"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="24dp"
                android:textSize="16sp" android:textColor="@color/colorDarkBLue"/>
        <TextView
                android:text="@string/searchResultActivity_descriptionPlaceholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/descriptionTitle" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                android:textStyle="bold"
                android:textColor="@android:color/black" android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="18sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
            android:text="@string/searchResultActivity_buttonHintContact"
            android:background="@drawable/btn_rounded_normal"
            android:layout_width="0dp"
            android:textColor="@color/colorWhiteBackground"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:id="@+id/button3" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="100dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/tripCardDescription"
            android:layout_marginStart="100dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>