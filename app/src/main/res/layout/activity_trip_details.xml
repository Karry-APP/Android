<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhiteBackground"
        tools:context=".activities.TripDetails">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/icon_arrow_back">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/linearLayout4"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
        >
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher_round"
                    android:id="@+id/imageProfil"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:gravity="center_vertical">
                    <TextView
                            android:text="@string/announcementActivity_userName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textUserName"
                            style="@style/userNameTrip"
                            app:layout_constraintTop_toTopOf="@+id/imageProfil"
                            app:layout_constraintStart_toEndOf="@+id/imageProfil" android:layout_marginStart="16dp"/>
                    <TextView
                            android:text="@string/announcementActivity_seeProfil_link"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/textGreen"
                            app:layout_constraintStart_toEndOf="@+id/textUserName" android:layout_marginStart="16dp"
                            app:layout_constraintTop_toTopOf="@+id/textUserName"
                            app:layout_constraintBottom_toBottomOf="@+id/textUserName"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_gravity="start|center_horizontal"
                        android:gravity="center_vertical" android:layout_marginTop="8dp">
                    <TextView
                            android:text="@string/announcementActivity_reviews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textComments"
                            style="@style/textSmallGrey"
                            app:layout_constraintTop_toBottomOf="@+id/textUserName"
                            app:layout_constraintStart_toStartOf="@+id/textUserName" android:layout_marginLeft="16dp"/>
                    <ImageView
                            android:layout_width="16dp"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_star_full"
                            app:layout_constraintStart_toEndOf="@+id/textComments"
                            app:layout_constraintTop_toTopOf="@+id/textComments"
                            app:layout_constraintBottom_toBottomOf="@+id/textComments"
                            android:layout_marginStart="4dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout4" android:id="@+id/linearLayout7"
                android:layout_width="match_parent">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/linearLayout5" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
                    android:gravity="center_vertical"
                    app:layout_constraintStart_toStartOf="parent">
                <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp" app:srcCompat="@drawable/ic_airplane_takeoff"
                        android:id="@+id/icon_airplane_takeoff"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <TextView
                                android:text="@string/announcementActivity_textLiveIn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textGoTo"
                                style="@style/textSmallGrey"
                                app:layout_constraintStart_toEndOf="@+id/icon_airplane_takeoff"
                                android:layout_marginStart="8dp"
                                app:layout_constraintTop_toTopOf="@+id/icon_airplane_takeoff"
                                app:layout_constraintBottom_toBottomOf="@+id/icon_airplane_takeoff"/>
                        <TextView
                                android:text="@string/city_Paris"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textCity2"
                                style="@style/textGreyAntraciteBold"
                                app:layout_constraintStart_toEndOf="@+id/textGoTo"
                                android:layout_marginStart="4dp"
                                app:layout_constraintTop_toTopOf="@+id/textGoTo"/>
                        <TextView
                                android:text="@string/country_France"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textCountry2"
                                style="@style/textSmallGrey"
                                app:layout_constraintStart_toEndOf="@+id/textCity2"
                                android:layout_marginStart="8dp"
                                app:layout_constraintTop_toTopOf="@+id/textCity2"/>
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_flag_fr"
                                app:layout_constraintStart_toEndOf="@+id/textCountry2"
                                android:layout_marginStart="8dp"
                                app:layout_constraintTop_toTopOf="@+id/textCountry2"
                                app:layout_constraintBottom_toBottomOf="@+id/textCountry2"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:layout_marginLeft="8dp">
                        <TextView
                                android:text="@string/announcementActivity_textDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textPDateDeparture"
                                app:layout_constraintStart_toStartOf="@+id/textGoTo"
                                android:textColor="#121212" app:layout_constraintTop_toBottomOf="@+id/linearLayout5"/>
                        <TextView
                                android:text="28/02/2019"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toEndOf="@+id/textPDateDeparture"
                                android:layout_marginStart="8dp"
                                app:layout_constraintTop_toTopOf="@+id/textPDateDeparture" android:textColor="#121212"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
                    app:layout_constraintStart_toStartOf="parent"
                    android:gravity="center_vertical">
                <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp" app:srcCompat="@drawable/ic_airplane_backhome"
                        android:id="@+id/icon_airplane_backhome"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <TextView
                                android:text="@string/announcementActivity_textGoTo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textLiveIn"
                                style="@style/textSmallGrey"
                                app:layout_constraintStart_toEndOf="@+id/icon_airplane_backhome"
                                android:layout_marginStart="8dp"
                                app:layout_constraintTop_toTopOf="@+id/icon_airplane_backhome"
                                app:layout_constraintBottom_toBottomOf="@+id/icon_airplane_backhome"/>
                        <TextView
                                android:text="@string/city_Roma"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textCity"
                                style="@style/textGreyAntraciteBold"
                                app:layout_constraintStart_toEndOf="@+id/textLiveIn" android:layout_marginStart="4dp"
                                app:layout_constraintTop_toTopOf="@+id/textLiveIn"/>
                        <TextView
                                android:text="@string/country_Italy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textCountry"
                                style="@style/textSmallGrey"
                                app:layout_constraintStart_toEndOf="@+id/textCity" android:layout_marginStart="8dp"
                                app:layout_constraintTop_toTopOf="@+id/textCity"/>
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_flag_it"
                                android:id="@+id/icon_flag_ita"
                                app:layout_constraintTop_toTopOf="@+id/textCountry"
                                app:layout_constraintBottom_toBottomOf="@+id/textCountry"
                                app:layout_constraintStart_toEndOf="@+id/textCountry" android:layout_marginStart="8dp"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:layout_marginLeft="8dp">
                        <TextView
                                android:text="@string/announcementActivity_textDateBack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textPDateArrival"
                                app:layout_constraintTop_toBottomOf="@+id/icon_airplane_backhome"
                                app:layout_constraintStart_toStartOf="@+id/textLiveIn" android:textColor="#121212"/>
                        <TextView
                                android:text="12/03/2019"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#121212"
                                app:layout_constraintStart_toEndOf="@+id/textPDateArrival"
                                android:layout_marginStart="8dp"
                                app:layout_constraintTop_toTopOf="@+id/textPDateArrival"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
                android:id="@+id/linearLayout8" android:layout_marginTop="16dp">
            <TextView
                    android:text="@string/announcementActivity_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textDescription"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/textTitleBlack"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout7"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="@string/announcementActivity_subtitleWeight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textSubtitleWeight"
                            app:layout_constraintStart_toStartOf="parent"
                            style="@style/textSmallGrey"
                            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textDescription"/>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:gravity="bottom">
                        <TextView
                                android:text="5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textPWeight"
                                app:layout_constraintTop_toBottomOf="@+id/textSubtitleWeight"
                                app:layout_constraintStart_toStartOf="parent"
                                android:textColor="#121212" android:textSize="20sp"/>
                        <TextView
                                android:text="kg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textPWeightUnit"
                                android:textColor="#121212"
                                app:layout_constraintStart_toEndOf="@+id/textPWeight"
                                app:layout_constraintBottom_toBottomOf="@+id/textPWeight"
                                android:layout_marginStart="4dp"/>
                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_weight"
                                android:id="@+id/icon_weight"
                                app:layout_constraintBottom_toBottomOf="@+id/textPWeight"
                                app:layout_constraintStart_toEndOf="@+id/textPWeightUnit"
                                android:layout_marginStart="8dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_marginLeft="16dp">
                    <TextView
                            android:text="@string/announcementActivity_subtitleNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textSubtitleNumber"
                            style="@style/textSmallGrey"
                            app:layout_constraintStart_toEndOf="@+id/textSubtitleWeight"
                            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:gravity="bottom">
                        <TextView
                                android:text="3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textPMaxProduct"
                                app:layout_constraintStart_toStartOf="@+id/textSubtitleNumber"
                                android:textColor="#121212"
                                app:layout_constraintBottom_toBottomOf="@+id/textPWeightUnit" android:textSize="20sp"/>
                        <TextView
                                android:text="produits"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#121212"
                                app:layout_constraintBottom_toBottomOf="@+id/textPWeightUnit"
                                app:layout_constraintStart_toEndOf="@+id/textPMaxProduct"
                                android:layout_marginStart="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout8" android:id="@+id/linearLayout3">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="@string/announcementActivity_capacity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textKarrier"
                        style="@style/textTitleBlack"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout8"/>
                <TextView
                        android:text="d'Adrien"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@+id/textKarrier" android:layout_marginStart="4dp"
                        app:layout_constraintTop_toTopOf="@+id/textKarrier" style="@style/textTitleBlack"/>
            </LinearLayout>
            <TextView
                    android:text="En déplacement pour quelques jours, je suis disposé à ramener des produits locaux quelqu’ils soient ... Faites-moi découvrir de nouvelles choses ! 😄"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textPDescription"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/textSmallGrey" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textKarrier"/>
        </LinearLayout>
        <Button
                android:text="@string/announcementActivity_buttonSendMessage"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/btn_rounded_normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintVertical_chainStyle="packed" android:shadowRadius="0"
                android:layout_width="wrap_content"
                style="@style/buttonSmallTransparent"
                android:textColor="@android:color/white"
                android:layout_height="29dp" android:paddingLeft="20dp" android:paddingRight="20dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout3"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
            android:text="@string/announcementActivity_titleDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#004E64"
            app:layout_constraintStart_toEndOf="@+id/icon_arrow_back"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/icon_arrow_back"
            app:layout_constraintBottom_toBottomOf="@+id/icon_arrow_back"/>
    <ImageView
            android:layout_width="24dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_arrow_back"
            android:id="@+id/icon_arrow_back"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline"
    />
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline" app:layout_constraintGuide_end="615dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>