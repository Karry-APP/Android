<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.TransactionDetailsActivity" android:background="@color/colorWhiteBackground">

    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
    >
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="90dp">
                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_arrow_back"
                        android:id="@+id/closeTransactionDetailsButton" android:layout_weight="0.6"
                        android:background="@android:color/transparent"
                        android:layout_gravity="center|center_horizontal"/>
                <TextView
                        android:text="Détails de ma commande"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView39" android:textSize="22sp"
                        android:textColor="@color/colorLightBLue" android:textStyle="bold"
                        android:paddingTop="31dp" android:paddingBottom="32dp"
                        android:layout_weight="2.5"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:background="@drawable/card_border">

                <TextView
                        android:text="Adrien F."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/transactionAuthorName"
                        android:textSize="18sp" android:textColor="@android:color/black"
                        android:layout_marginTop="24dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView29"
                        app:layout_constraintStart_toEndOf="@+id/transactionAuthorImage"
                        android:layout_marginStart="16dp"/>
                <TextView
                        android:text="Produit livré à Nantes par:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView29"
                        android:textSize="17sp"
                        app:layout_constraintTop_toBottomOf="@+id/transactionCity"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="24dp" android:layout_marginTop="40dp"/>
                <TextView
                        android:text="18/06/2019"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView37"
                        app:layout_constraintTop_toBottomOf="@+id/textView36"
                        app:layout_constraintStart_toEndOf="@+id/imageView16" android:layout_marginStart="16dp"
                />
                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp" app:srcCompat="@drawable/ic_check"
                        android:id="@+id/imageView15"
                        app:layout_constraintTop_toBottomOf="@+id/imageView12"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="38dp" android:layout_marginStart="42dp"/>
                <TextView
                        android:text="Rome (ITA)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/transactionCity"
                        android:layout_marginTop="24dp"
                        app:layout_constraintTop_toBottomOf="@+id/transactionName"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="24dp" android:textSize="17sp"/>
                <TextView
                        android:text="Produit trouvé"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView34"
                        android:textSize="18sp" android:textColor="@color/colorLightBLue"
                        app:layout_constraintTop_toBottomOf="@+id/textView33"
                        app:layout_constraintStart_toEndOf="@+id/imageView15" android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"/>
                <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp" tools:srcCompat="@tools:sample/avatars"
                        android:id="@+id/transactionAuthorImage"
                        android:layout_marginTop="24dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView29"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="24dp"/>
                <TextView
                        android:text="Huile d’olives Italienne - Marque 100cl"
                        android:layout_width="363dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/transactionName"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" android:textSize="20sp"
                        android:layout_marginStart="24dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"
                        app:layout_constraintTop_toTopOf="parent"/>
                <Button
                        android:text="Voir la \n conversation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/seeConversationButton"
                        android:textColor="@color/green_karry"
                        android:backgroundTint="@android:color/transparent"
                        android:background="@android:color/transparent"
                        android:layout_marginTop="24dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView29" android:layout_marginEnd="24dp"
                        app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                        android:text="4,8/5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/transactionAuthorRate"
                        android:layout_marginTop="4dp"
                        app:layout_constraintTop_toBottomOf="@+id/transactionAuthorName"
                        app:layout_constraintStart_toEndOf="@+id/transactionAuthorImage"
                        android:layout_marginStart="16dp"/>
                <TextView
                        android:text="Produit délivré"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView32"
                        android:textColor="@color/colorLightBLue"
                        android:textSize="18sp"
                        app:layout_constraintTop_toBottomOf="@+id/transactionAuthorImage"
                        app:layout_constraintStart_toEndOf="@+id/imageView12" android:layout_marginStart="16dp"
                        android:layout_marginTop="38dp"/>
                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp" app:srcCompat="@drawable/ic_check"
                        android:id="@+id/imageView16"
                        app:layout_constraintTop_toBottomOf="@+id/imageView15"
                        android:layout_marginTop="38dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="42dp"/>
                <TextView
                        android:text="Commande validé"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView36"
                        android:textColor="@color/colorLightBLue" android:textSize="18sp"
                        app:layout_constraintTop_toBottomOf="@+id/textView35"
                        app:layout_constraintStart_toEndOf="@+id/imageView16" android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"/>
                <TextView
                        android:text="24,30 €"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/transactionPrice"
                        android:textColor="@android:color/black" android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_marginTop="24dp"
                        app:layout_constraintTop_toBottomOf="@+id/transactionName" android:layout_marginEnd="24dp"
                        app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                        android:text="13/06/2019"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView35"
                        app:layout_constraintTop_toBottomOf="@+id/textView34"
                        app:layout_constraintStart_toEndOf="@+id/imageView15" android:layout_marginStart="16dp"/>
                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp" app:srcCompat="@drawable/ic_check"
                        android:id="@+id/imageView12"
                        android:layout_marginTop="42dp"
                        app:layout_constraintTop_toBottomOf="@+id/transactionAuthorImage"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="42dp"/>
                <TextView
                        android:text="12/06/2019"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView33"
                        app:layout_constraintTop_toBottomOf="@+id/textView32"
                        app:layout_constraintStart_toEndOf="@+id/imageView12" android:layout_marginStart="16dp"/>
                <TextView
                        android:text="Photo partagées"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView40" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="24dp" app:layout_constraintTop_toBottomOf="@+id/textView37"
                        android:textSize="17sp" android:layout_marginTop="40dp"/>
                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="24dp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
                        android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView40"
                        android:id="@+id/transactionSharedImagesList"/>
                <Button
                        android:text="Supprimer la commande"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/removeTransactionSubmitButton"
                        android:layout_marginBottom="24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/transactionSharedImagesList"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        android:layout_marginTop="24dp" android:background="@android:color/transparent"
                        android:textColor="@color/colorRed"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>