<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="8dp" android:id="@+id/tripCard" android:background="@android:color/white">

    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp" tools:srcCompat="@tools:sample/avatars[0]"
            android:id="@+id/userAvatar"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/tripDepartureCity"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userName"
            app:layout_constraintStart_toEndOf="@+id/userAvatar"
            android:layout_marginStart="8dp" tools:text="Adrien F."
            android:textColor="@android:color/black" android:textStyle="bold" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userRate"
            app:layout_constraintStart_toEndOf="@+id/userAvatar"
            android:layout_marginStart="8dp"
            tools:text="4.8"
            android:textColor="@android:color/darker_gray" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/userName"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            tools:text="Voir dÃ©tails"
            android:textColor="@color/colorPrimary" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tripDepartureCity" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            tools:text="Nantes (FR)" android:textColor="@android:color/black"
            android:layout_marginBottom="4dp" app:layout_constraintBottom_toTopOf="@+id/imageView3"
    />
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tripDestinationCity" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            tools:text="Rome (ITA)"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toTopOf="@+id/imageView4" android:layout_marginBottom="4dp"/>
    <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:srcCompat="@drawable/bg_searchbar"
            android:id="@+id/imageView3"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/searchStartDate" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:contentDescription="UIDotStart"/>
    <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:srcCompat="@drawable/bg_searchbar"
            android:id="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toTopOf="@+id/searchEndDate" android:layout_marginBottom="4dp"
            android:contentDescription="UIDotEnd"/>
    <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toStartOf="@+id/imageView4"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/imageView3"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/searchEndDate" android:layout_marginBottom="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchStartDate"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" tools:text="02/01/19"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
    />
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchEndDate"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" tools:text="24/01/19"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>