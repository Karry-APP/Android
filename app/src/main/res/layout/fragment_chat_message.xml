<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:background="@color/colorWhiteBackground"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".fragments.chat.ChatMessageFragment">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:paddingTop="24dp" android:paddingBottom="24dp"
            android:background="@drawable/card_border">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_profile" android:id="@+id/profil"
                android:layout_weight="1" android:layout_gravity="center_vertical"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Justine P."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/name" style="@style/userNameTrip"/>
                <TextView
                        android:text="@string/city_Paris"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/city" android:layout_weight="1"
                        android:layout_marginLeft="8dp" style="@style/textSmallGrey"/>
            </LinearLayout>
            <TextView
                    android:text="Hello pensez vous que ..."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/description" style="@style/textSmallGrey"/>
        </LinearLayout>
        <TextView
                android:text="15h30"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/date" android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical" android:textColor="#121212"/>
    </LinearLayout>
</FrameLayout>
