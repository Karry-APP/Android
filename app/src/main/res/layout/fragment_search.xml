<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/colorWhiteBackground"
             tools:context=".fragments.SearchFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/mainSearchPage">

        <TextView
                android:text="Recherche de voyageurs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_marginTop="40dp"
                android:textStyle="bold"

                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:textSize="24sp"
                android:textColor="#004E64"

        />
        <LinearLayout

                android:orientation="vertical"
                android:background="@drawable/search_border"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="40dp"


                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/linearLayout4">
            <TextView
                    android:textStyle="bold"

                    android:textColor="@color/colorDarkBLue"
                    android:text="Où se trouve votre produit ?"
                    android:layout_width="match_parent"
                    android:textSize="15dp"
                    android:layout_height="wrap_content" android:id="@+id/destinationCityLabel" android:padding="5dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_height="wrap_content" android:id="@+id/destinationCityInput" android:text="---"
                    android:padding="5dp"/>


        </LinearLayout>

        <LinearLayout

                android:orientation="vertical"
                android:background="@drawable/search_border"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"


                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/linearLayout5" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        >


            <TextView
                    android:textColor="@color/colorDarkBLue"
                    android:textStyle="bold"
                    android:text="Où souhaitez vous être livré ?"
                    android:layout_width="match_parent"
                    android:textSize="15dp"
                    android:layout_marginTop="12dp"

                    android:layout_height="wrap_content" android:id="@+id/arrivalCityLabel" android:padding="5dp"/>
            <TextView
                    android:text="---"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/arrivalCityInput" android:padding="5dp"/>


        </LinearLayout>


        <Button
                android:text="@string/MainActivity_bottomNavigation_searchTitle"
                android:layout_width="0dp"
                android:layout_height="55dp" android:id="@+id/button3"
                android:background="@drawable/btn_rounded_normal" android:textColor="@android:color/white"
                android:layout_marginEnd="45dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="45dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout5" android:layout_marginTop="40dp"
                style="?android:attr/borderlessButtonStyle" android:textSize="14sp"/>

        <TextView
                android:text="@string/SearchFragment_searchBottomTooltip"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_height="wrap_content" android:id="@+id/textView2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/textView3"/>
        <TextView
                android:text="@string/SearchFragment_postTripTooltipButton"
                android:layout_width="wrap_content"
                android:textColor="#4CEBA0"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_height="25dp" android:id="@+id/textView3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.497" android:layout_marginBottom="64dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline2"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content" app:layout_constraintGuide_begin="627dp"
                android:id="@+id/guideline2"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.6" android:layout_marginBottom="64dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>