<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="inputWhite">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="android:textSize">16sp</item>

    </style>
    <style name="inputGrey">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#C4C4C4</item>
        <item name="android:backgroundTint">#C4C4C4</item>
        <item name="colorControlNormal">#C4C4C4</item>
        <item name="colorControlActivated">#C4C4C4</item>
    </style>

    <style name="textSmallGrey" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#C4C4C4</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="buttonGreenFull" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">#4CEBA0</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="buttonWhiteFull" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#4CEBA0</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="buttonSmallTransparent">
        <item name="android:textColor">#7A7A7A</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">54dp</item>
        <item name="android:layout_height">31dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="buttonSmallGrey">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">#C4C4C4</item>
        <item name="android:layout_width">54dp</item>
        <item name="android:layout_height">31dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

</resources>
