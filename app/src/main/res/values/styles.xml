<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:statusBarColor">@color/colorWhiteBackground</item>-->
    </style>

    <style name="inputWhite">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="inputGreyAntraciteBold">
        <item name="android:textColor">#7C9299</item>
        <item name="android:textColorHint">#7C9299</item>
        <item name="android:backgroundTint">#DADADA</item>
        <item name="colorControlNormal">#DADADA</item>
        <item name="colorControlActivated">#DADADA</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textSmallGrey" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#7C9299</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="buttonSmallTransparent">
        <item name="android:textColor">#7A7A7A</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">54dp</item>
        <item name="android:layout_height">31dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="buttonSmallGrey">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">#C4C4C4</item>
        <item name="android:layout_width">54dp</item>
        <item name="android:layout_height">31dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="ratingBarCustom"
           parent="android:style/Widget.Material.RatingBar.Small">
    </style>

    <style name="userNameTrip">
        <item name="android:textColor">#121212</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textTitleBlack">
        <item name="android:textColor">#121212</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textGreyAntraciteBold">
        <item name="android:textColor">#7C9299</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textGreen">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#4CEBA0</item>
    </style>

    <style name="textGrey">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#C4C4C4</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
